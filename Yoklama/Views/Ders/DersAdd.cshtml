
@{
    ViewData["Title"] = "DersAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<H1>buraya ne yazarsam o gelecek</H1>
<button type="button" class="btn btn-danger waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#custom-modal"><i class="mdi mdi-plus-circle me-1"></i>Yeni Personel Ekle</button>
<div class="modal fade" id="custom-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h4 class="modal-title" id="myCenterModalLabel">Yeni Ders Ekle</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="DersAdd" asp-controller="Ders" method="post">
                    <div class="mb-3">
                        <label for="ADI" class="form-label">ADI</label>
                        <input type="text" class="form-control" placeholder="ADI" name="ADI">
                    </div>
                    <div class="mb-3">
                        <label for="SOYADI" class="form-label">DURUM</label>
                        <input type="text" class="form-control" placeholder="SOYADI" name="SOYADI">
                    </div>
                    <div class="mb-3">
                        <label for="UNVAN" class="form-label">OZEL_KOD</label>
                        <input type="text" class="form-control" placeholder="UNVAN" name="ADI">
                    </div>
                    <div class="mb-3">
                        <label for="UNVAN" class="form-label">SCHOOL_ID</label>
                        <input type="text" class="form-control" placeholder="UNVAN" name="ADI">
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

