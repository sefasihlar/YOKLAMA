@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ajax List</h1>

<button type="button" id="btnList" class="btn btn-primary" style="width:150px;width:150px;margin:10px 10px 10px 10px">Personel Listele</button>
<br />
<button type="button" id="btnGetId" class="btn btn-primary" style="width:150px;margin:10px 10px 10px 10px">PersonelGetir</button>
<button type="button" id="btnAdd" class="btn btn-primary" style="width:150px;margin:10px 10px 10px 10px">Personel Ekle</button>
<button type="button" id="btnsil" class="btn btn-primary" style="width:150px;margin:10px 10px 10px 10px">Personel sil</button>
<button type="button" id="btnUpdate" class="btn btn-primary" style="width:150px;margin:10px 10px 10px 10px">Personel Güncelle</button>
<br />
<div id="PersonelList">
    Burata gelicek
</div>
<div id="PersonelGetir">
    Buraya bir Ogremen gelicek
</div>
<div>
    <input type="text" id="id" placeholder="Personel Id Değerini Girin"  class="form-control"/>
</div>
<div>
    <input type="text" id="silid" placeholder="silinecek Personel Id Değerini Girin" class="form-control" />
</div>
<br />
<div>
    <label for="IDARI_PERSONEL_ID" class="form-label">IDARI_PERSONEL_ID</label>
    <input type="text" class="form-control" placeholder="IDARI_PERSONEL_ID" id="IDARI_PERSONEL_ID">
    <label for="SOYADI" class="form-label">SOYADI</label>
    <input type="text" class="form-control" placeholder="SOYADI" id="SOYADI">
    <label for="TELEFON" class="form-label">TELEFON</label>
    <input type="text" class="form-control" placeholder="TELEFON" id="TELEFON">
</div>
<br />
<br />
<br />
<div>
    <div class="mb-3">
        <label for="ADI" class="form-label">ADI</label>
        <input type="text" class="form-control" placeholder="ADI" id="ADI">
    </div>
    <div class="mb-3">
        <label for="SOYADI" class="form-label">SOYADI</label>
        <input type="text" class="form-control" placeholder="SOYADI" id="SOYADI">
    </div>
    <div class="mb-3">
        <label for="UNVAN" class="form-label">UNVAN</label>
        <input type="text" class="form-control" placeholder="UNVAN" id="UNVAN">
    </div>
    <div class="mb-3">
        <label for="TELEFON" class="form-label">TELEFON</label>
        <input type="text" class="form-control" placeholder="TELEFON" id="TELEFON">
    </div>
    <div class="mb-3">
        <label for="EMAİL" class="form-label">Email</label>
        <input type="email" class="form-control" placeholder="MAIL" id="MAIL">
    </div>
    <div class="mb-3">
        <label for="SIFRE" class="form-label">SIFRE</label>
        <input type="text" class="form-control" placeholder="SIFRE" id="SIFRE">
    </div>
    <div class="mb-3">
        <label for="DURUM" class="form-label">DURUM</label>
        <input type="text" class="form-control" placeholder="Enter Location" id="DURUM">
    </div>
    <div class="mb-3">
        <label for="OKUL" class="form-label">OKUL</label>
        <input type="text" class="form-control" placeholder="KOD" id="SCHOOL_ID">
    </div>
    <div class="mb-3">
        <label for="OZEL_KOD" class="form-label">KOD</label>
        <input type="text" class="form-control" placeholder="KOD" id="OZEL_KOD">
    </div>
    <div class="text-end">
        <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
        <button type="button" class="btn btn-danger waves-effect waves-light" data-bs-dismiss="modal">Continue</button>
    </div>
</div>

